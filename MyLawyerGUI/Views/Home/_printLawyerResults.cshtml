                            <div class="span5" id="topBoxCenterColumn">
                                <p>One fine body…</p>
                            </div>
                        </div>


                    </div>
                    <div class="modal-footer">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                    </div>
                </div>
                
                
                
                
                
                
