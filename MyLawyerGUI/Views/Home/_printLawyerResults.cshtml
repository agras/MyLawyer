                    </div>
                    <div class="modal-body">

                        <div class="row-fluid" id="topBox">
                            <div class="span4" id="topBoxLeftColumn">

                                <ul class="thumbnails">
                                    <li>
                                        <div class="thumbnail">
                                            <img src="../../Images/background_wood.jpg" alt="">
                                        </div>
                                    </li>
                                </ul>


                            </div>
                            <div class="span5" id="topBoxCenterColumn">

                                <ul class="thumbnails">
                                    <li>
                                        <div class="thumbnail">
                                            <img src="../../Images/top112.jpg" alt="">
                                            <p>@Html.DisplayFor(modelItem => item.Name)</p>
                                            <p>@Html.DisplayFor(modelItem => item.Address)</p>
                                            <p>@Html.DisplayFor(modelItem => item.PrimaryPhone)</p>
                                            <p>@Html.DisplayFor(modelItem => item.Email)</p>

                                        </div>
                                    </li>
                                </ul>

                            </div>
                            <div class="span3" id="topBoxRightColumn">

                                <ul class="thumbnails">
                                    <li>
                                        <div class="thumbnail">
                                            <img src="../../Images/top112.jpg" alt="">
                                            <p>@Html.DisplayFor(modelItem => item.LawBarText)</p>
                                            @foreach (string sector in item.LawSectorTexts)
                                            {
                                                <p>@sector</p>                                                    
                                            }
                                        </div>
                                    </li>
                                </ul>

                            </div>
                        </div>

                        <hr>

                        <div class="row-fluid" id="centerBox">
                            <div class="span5" id="topBoxLeftColumn">

                                <ul class="thumbnails">
                                    <li>
                                        <div class="thumbnail">
                                            @if (item.Website != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.Website)
                                            }
                                        </div>
                                    </li>
                                </ul>


